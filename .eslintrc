{
  "extends": ["@zazen/eslint-config/typescript"],
  "env": {
    "node": true
  },
  "rules": {
    "@typescript-eslint/indent": "off",
    "@typescript-eslint/space-before-function-paren": "off",
    "@typescript-eslint/explicit-function-return-type": "off",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "**/__tests__/**/*.{js,ts,tsx}",
        "**/*.@(spec|test).{js,ts,tsx}"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}
